<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fotolistahotel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/wayirahotel"
        android:scaleType="fitXY"
        app:layout_constraintVertical_bias="0"
        />

    <TextView
        android:id="@+id/nombreListaHoteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fotolistahotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Hotel Wayira Beach"
        app:layout_constraintVertical_bias="0.01"
        android:textSize="26dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/precioListaHoteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nombreListaHoteles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintHorizontal_bias="0.03"
        android:text="$100.000 COP"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/contacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nombreListaHoteles"
        app:layout_constraintStart_toEndOf="@+id/precioListaHoteles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintHorizontal_bias="0.23"
        android:text="@string/contacto"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/numeroContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3135138967"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/contacto"
        app:layout_constraintTop_toBottomOf="@+id/nombreListaHoteles"
        app:layout_constraintVertical_bias="0.03" />
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bannerhoteles"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth="800dp"
        app:layout_constraintHeight="35dp"
        />
    <ImageView
        android:id="@+id/foto1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/wayira3"
        app:layout_constraintWidth="300dp"
        app:layout_constraintHeight="150dp"
        app:layout_constraintVertical_bias="0.52"
        />

    <ImageView
        android:id="@+id/foto2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wayira5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="200dp"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto1"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth="100dp"
        />

    <ImageView
        android:id="@+id/foto3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wayira2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="100dp"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto1"
        app:layout_constraintVertical_bias="0.094"
        app:layout_constraintWidth="150dp" />
    <ImageView
        android:id="@+id/foto4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wayira3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="100dp"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto1"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth="150dp" />
</androidx.constraintlayout.widget.ConstraintLayout>