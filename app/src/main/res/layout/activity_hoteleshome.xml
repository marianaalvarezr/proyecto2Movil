<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hoteleshome">
    <ImageView
        android:id="@+id/BannerTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/iconohoteles"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth="800dp"
        />
    <ImageView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/titulo"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth="150dp"
        app:layout_constraintHeight="100dp"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/tituloo"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintWidth="80dp"
        app:layout_constraintHeight="80dp"
        />
    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Bienvenido/a a la sección de hoteles, encontrarás una gran variedad, podrás filtrar según tus necesidades y escogerás¡la mejor opción para ti!"
        app:layout_constraintVertical_bias="0.33"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/imagen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/imagen1"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintWidth="120dp"
        app:layout_constraintHeight="140dp"
        />
    <ImageView
        android:id="@+id/imagen2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/imagen2"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth="120dp"
        app:layout_constraintHeight="140dp"
        />
    <ImageView
        android:id="@+id/imagen3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/imagen3"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintWidth="120dp"
        app:layout_constraintHeight="140dp"
        />
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginHorizontal="40dp"
      app:layout_constraintVertical_bias="0.8"
      android:backgroundTint="@color/color4"
      android:text="¡Cónoce más!"
      android:textStyle="bold"
      android:textColor="@color/color3"
      />


</androidx.constraintlayout.widget.ConstraintLayout>